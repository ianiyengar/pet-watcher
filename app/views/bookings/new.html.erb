<div>
<%= link_to bookings_url do %>
<button type="button" class="btn btn-primary btn-sm">Admin Page</button>
<% end %>
<div class="modal-header1">
  <h1> Book a sitting with PetSitters+ today! </h1>
  </div>
<div class="modal-header">
<h5> Start booking here: </h5>
<%= form_with model: @booking do |f| %>
<div class="form-group">
  <%= f.label :first_name, "First Name", class: "col-md control-label"  %>
    <div class="col-md-8">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, "Last Name", class: "col-md control-label"  %>
      <div class="col-md-8">
        <%= f.text_field :last_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :animal_name, "Animal Name", class: "col-md control-label"  %>
        <div class="col-md-8">
          <%= f.text_field :animal_name, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :animal_type, "Animal Type", class: "col-md control-label"  %>
        <div class="col-md-8">
          <%= f.select :animal_type, ["Dog", "Cat"], {}, class: "form-control"  %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :hours_requested, "Hours Requested", class: "col-md control-label"  %>
        <div class="col-md-8">
          <%= f.number_field :hours_requested, in: 2..8, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :date, "Date", class: "col-md control-label"  %>
        <div class="col-md-11">
          <%= f.date_field :date, class: "form-control" %>
      </div>
    </div>
  <div class="form-group">
    <%= f.submit class: 'btn-success' %>
  </div>
<% end %>
</div>
<style>
.btn-primary {
  padding: 10px;
  margin-left: 20px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-right: 10px;
  font-size: 20px;
}
.modal-header {
  background-color: #f5f5f5;
  border-bottom: 1px solid #e5e5e5;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  padding: 15px 15px 15px 30px;
}
.modal-header1 {
  background-color: #f5f5f5;
  border-bottom: 1px solid #e5e5e5;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  padding: 15px 15px 15px 30px;
  margin-bottom: 20px;
}
.form-group {
  margin-right: 5000px;
  margin-bottom: 10px;
}
.btn-success {
  margin-left: 10px;
  margin-top: 10px;
  margin-bottom: 10px;
  font-size: 20px;
}
</style>
